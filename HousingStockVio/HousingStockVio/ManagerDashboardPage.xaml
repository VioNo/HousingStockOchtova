<Page x:Class="HousingStockVio.ManagerDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Дашборд руководителя"
      Background="#FFFFFFFF">

    <Page.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.Row="0" 
                Background="#FFFFFFFF"
                BorderBrush="#FFCCCCCC"
                BorderThickness="0,0,0,1"
                Padding="30,25">
            <StackPanel>
                <TextBlock Text="👔 ДАШБОРД РУКОВОДИТЕЛЯ"
                          FontFamily="Segoe UI"
                          FontSize="28"
                          FontWeight="Bold"
                          Foreground="#FF333333"/>

                <TextBlock Text="Панель управления и аналитики"
                          FontFamily="Segoe UI"
                          FontSize="14"
                          Foreground="#FF666666"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Первая строка: Финансовые показатели -->
                <Grid Grid.Row="0" Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Доход -->
                    <Border Grid.Column="0" 
                            Background="#FFF4E8D3"
                            CornerRadius="12"
                            Margin="0,0,15,0"
                            Padding="25">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="📈"
                                          FontSize="24"/>
                                <TextBlock Text="Доход"
                                          FontFamily="Segoe UI"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Foreground="#FF333333"
                                          Margin="10,0,0,0"/>
                            </StackPanel>

                            <TextBlock x:Name="MonthlyIncomeText" 
                                      Text="0 руб."
                                      FontFamily="Segoe UI"
                                      FontSize="28"
                                      FontWeight="Bold"
                                      Foreground="#FF27AE60"/>

                            <TextBlock Text="за текущий месяц"
                                      FontFamily="Segoe UI"
                                      FontSize="14"
                                      Foreground="#FF666666"
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Расходы -->
                    <Border Grid.Column="1" 
                            Background="#FFF4E8D3"
                            CornerRadius="12"
                            Margin="0,0,15,0"
                            Padding="25">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="📉"
                                          FontSize="24"/>
                                <TextBlock Text="Расходы"
                                          FontFamily="Segoe UI"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Foreground="#FF333333"
                                          Margin="10,0,0,0"/>
                            </StackPanel>

                            <TextBlock x:Name="MonthlyExpensesText" 
                                      Text="0 руб."
                                      FontFamily="Segoe UI"
                                      FontSize="28"
                                      FontWeight="Bold"
                                      Foreground="#FFE74C3C"/>

                            <TextBlock Text="за текущий месяц"
                                      FontFamily="Segoe UI"
                                      FontSize="14"
                                      Foreground="#FF666666"
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Прибыль -->
                    <Border Grid.Column="2" 
                            Background="#FFF4E8D3"
                            CornerRadius="12"
                            Margin="0,0,15,0"
                            Padding="25">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="💰"
                                          FontSize="24"/>
                                <TextBlock Text="Прибыль"
                                          FontFamily="Segoe UI"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Foreground="#FF333333"
                                          Margin="10,0,0,0"/>
                            </StackPanel>

                            <TextBlock x:Name="NetProfitText" 
                                      Text="0 руб."
                                      FontFamily="Segoe UI"
                                      FontSize="28"
                                      FontWeight="Bold"
                                      Foreground="#FF333333"/>

                            <TextBlock Text="чистая прибыль"
                                      FontFamily="Segoe UI"
                                      FontSize="14"
                                      Foreground="#FF666666"
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Рентабельность -->
                    <Border Grid.Column="3" 
                            Background="#FFF4E8D3"
                            CornerRadius="12"
                            Padding="25">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="📊"
                                          FontSize="24"/>
                                <TextBlock Text="Рентабельность"
                                          FontFamily="Segoe UI"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Foreground="#FF333333"
                                          Margin="10,0,0,0"/>
                            </StackPanel>

                            <TextBlock x:Name="ProfitabilityText" 
                                      Text="0%"
                                      FontFamily="Segoe UI"
                                      FontSize="28"
                                      FontWeight="Bold"
                                      Foreground="#FF27AE60"/>

                            <TextBlock Text="уровень рентабельности"
                                      FontFamily="Segoe UI"
                                      FontSize="14"
                                      Foreground="#FF666666"
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Вторая строка: Эффективность ресурсов -->
                <Border Grid.Row="1" 
                        Background="White"
                        BorderBrush="#FFCCCCCC"
                        BorderThickness="1"
                        CornerRadius="12"
                        Margin="0,0,0,25"
                        Padding="30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="⚡ ЭФФЕКТИВНОСТЬ РЕСУРСОВ"
                                  FontFamily="Segoe UI"
                                  FontSize="20"
                                  FontWeight="Bold"
                                  Foreground="#FF333333"
                                  Grid.Row="0"
                                  Margin="0,0,0,20"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Прибыль от ресурсов -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="Прибыль от ресурсов" 
                                          FontFamily="Segoe UI"
                                          FontSize="15"
                                          FontWeight="SemiBold"
                                          Foreground="#FF333333"
                                          Margin="0,0,0,10"/>
                                <TextBlock x:Name="ResourceProfitText" 
                                          Text="0 руб." 
                                          FontFamily="Segoe UI"
                                          FontSize="22" 
                                          FontWeight="Bold"
                                          Foreground="#FF27AE60"/>
                            </StackPanel>

                            <!-- Затраты на ресурсы -->
                            <StackPanel Grid.Column="1" Margin="0,0,20,0">
                                <TextBlock Text="Затраты на ресурсы" 
                                          FontFamily="Segoe UI"
                                          FontSize="15"
                                          FontWeight="SemiBold"
                                          Foreground="#FF333333"
                                          Margin="0,0,0,10"/>
                                <TextBlock x:Name="ResourceCostsText" 
                                          Text="0 руб." 
                                          FontFamily="Segoe UI"
                                          FontSize="22" 
                                          FontWeight="Bold"
                                          Foreground="#FFE74C3C"/>
                            </StackPanel>

                            <!-- Рентабельность ресурсов -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Рентабельность ресурсов" 
                                          FontFamily="Segoe UI"
                                          FontSize="15"
                                          FontWeight="SemiBold"
                                          Foreground="#FF333333"
                                          Margin="0,0,0,10"/>
                                <TextBlock x:Name="ResourceProfitabilityText" 
                                          Text="0%" 
                                          FontFamily="Segoe UI"
                                          FontSize="22" 
                                          FontWeight="Bold"
                                          Foreground="#FF333333"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Третья строка: Персонал и задачи -->
                <Grid Grid.Row="2" Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Персонал -->
                    <Border Grid.Column="0" 
                            Background="White"
                            BorderBrush="#FFCCCCCC"
                            BorderThickness="1"
                            CornerRadius="12"
                            Margin="0,0,15,0"
                            Padding="30">
                        <StackPanel>
                            <TextBlock Text="👥 ПЕРСОНАЛ"
                                      FontFamily="Segoe UI"
                                      FontSize="20"
                                      FontWeight="Bold"
                                      Foreground="#FF333333"
                                      Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Всего сотрудников -->
                                <StackPanel Grid.Row="0" 
                                          Orientation="Horizontal" 
                                          Margin="0,0,0,15">
                                    <TextBlock Text="Всего сотрудников:"
                                              FontFamily="Segoe UI"
                                              FontSize="15"
                                              Foreground="#FF333333"
                                              Width="180"/>
                                    <TextBlock x:Name="TotalStaffText" 
                                              FontFamily="Segoe UI"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="#FF27AE60"/>
                                </StackPanel>

                                <!-- Активных -->
                                <StackPanel Grid.Row="1" 
                                          Orientation="Horizontal" 
                                          Margin="0,0,0,15">
                                    <TextBlock Text="Активных сотрудников:"
                                              FontFamily="Segoe UI"
                                              FontSize="15"
                                              Foreground="#FF333333"
                                              Width="180"/>
                                    <TextBlock x:Name="ActiveStaffText" 
                                              FontFamily="Segoe UI"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="#FF27AE60"/>
                                </StackPanel>

                                <!-- Средний стаж -->
                                <StackPanel Grid.Row="2" 
                                          Orientation="Horizontal">
                                    <TextBlock Text="Средний стаж (лет):"
                                              FontFamily="Segoe UI"
                                              FontSize="15"
                                              Foreground="#FF333333"
                                              Width="180"/>
                                    <TextBlock x:Name="AvgExperienceText" 
                                              FontFamily="Segoe UI"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="#FF333333"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Задачи -->
                    <Border Grid.Column="1" 
                            Background="White"
                            BorderBrush="#FFCCCCCC"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="30">
                        <StackPanel>
                            <TextBlock Text="📋 ЗАДАЧИ"
                                      FontFamily="Segoe UI"
                                      FontSize="20"
                                      FontWeight="Bold"
                                      Foreground="#FF333333"
                                      Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Всего задач -->
                                <StackPanel Grid.Row="0" 
                                          Orientation="Horizontal" 
                                          Margin="0,0,0,15">
                                    <TextBlock Text="Всего задач:"
                                              FontFamily="Segoe UI"
                                              FontSize="15"
                                              Foreground="#FF333333"
                                              Width="180"/>
                                    <TextBlock x:Name="TotalTasksText" 
                                              FontFamily="Segoe UI"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="#FF333333"/>
                                </StackPanel>

                                <!-- В работе -->
                                <StackPanel Grid.Row="1" 
                                          Orientation="Horizontal" 
                                          Margin="0,0,0,15">
                                    <TextBlock Text="В работе:"
                                              FontFamily="Segoe UI"
                                              FontSize="15"
                                              Foreground="#FF333333"
                                              Width="180"/>
                                    <TextBlock x:Name="InProgressTasksText" 
                                              FontFamily="Segoe UI"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="#FFE67E22"/>
                                </StackPanel>

                                <!-- Завершено -->
                                <StackPanel Grid.Row="2" 
                                          Orientation="Horizontal">
                                    <TextBlock Text="Завершено:"
                                              FontFamily="Segoe UI"
                                              FontSize="15"
                                              Foreground="#FF333333"
                                              Width="180"/>
                                    <TextBlock x:Name="CompletedTasksText" 
                                              FontFamily="Segoe UI"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="#FF27AE60"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Четвертая строка: Быстрые действия -->
                <Border Grid.Row="3" 
                        Background="White"
                        BorderBrush="#FFCCCCCC"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="🚀 БЫСТРЫЕ ДЕЙСТВИЯ"
                                  FontFamily="Segoe UI"
                                  FontSize="20"
                                  FontWeight="Bold"
                                  Foreground="#FF333333"
                                  Grid.Row="0"
                                  Margin="0,0,0,20"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" 
                                    Content="👥 Управление персоналом" 
                                    Style="{StaticResource PrimaryButton}"
                                    Height="55"
                                    Margin="0,0,15,0"
                                    Click="ManageStaffButton_Click"/>

                            <Button Grid.Column="1" 
                                    Content="📅 Планирование работ" 
                                    Style="{StaticResource PrimaryButton}"
                                    Height="55"
                                    Margin="15,0,15,0"
                                    Click="PlanWorkButton_Click"/>

                            <Button Grid.Column="2" 
                                    Content="📊 Аналитический отчет" 
                                    Style="{StaticResource PrimaryButton}"
                                    Height="55"
                                    Margin="15,0,0,0"
                                    Click="AnalyticalReportButton_Click"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>