<Window x:Class="HousingStockVio.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель администратора" 
        Height="750" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Icon="Resources/icon.ico">

    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Window.Resources>

    <Grid Background="#FFFFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковая панель навигации -->
        <Border Grid.Column="0" 
                Background="#FFF4E8D3"
                BorderThickness="0,0,1,0"
                BorderBrush="#FFCCCCCC">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок боковой панели -->
                <Border Grid.Row="0" 
                        Background="#FF67BA80" 
                        Padding="25,20">
                    <StackPanel>
                        <!-- Логотип -->
                        <Image Source="Resources/logo.png" 
                               Height="60" 
                               Width="60"
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>

                        <TextBlock Text="ADMIN PANEL"
                                  FontFamily="Segoe UI"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Навигационные кнопки -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,30,0,0">
                        <Border Height="1" Background="#FFCCCCCC" Margin="20,0"/>

                        <Button Content="📊 ДАШБОРД" 
                                Style="{StaticResource PrimaryButton}"
                                Margin="20,15"
                                Height="50"
                                Click="DashboardButton_Click"/>

                        <Button Content="📋 ЗАЯВКИ НА РЕМОНТ" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="20,5"
                                Height="45"
                                Click="ApplicationsButton_Click"/>

                        <Button Content="📜 ИСТОРИЯ ЗАЯВОК" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="20,5"
                                Height="45"
                                Click="HistoryButton_Click"/>

                        <Border Height="1" Background="#FFCCCCCC" Margin="20,20"/>

                        <Button Content="💼 ПАРТНЕРЫ" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="20,5"
                                Height="45"
                                Click="PartnersButton_Click"/>

                        <Button Content="💰 НАЧИСЛЕНИЯ" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="20,5"
                                Height="45"
                                Click="CreateAccrualButton_Click"/>

                        <Button Content="📈 ФИНАНСЫ" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="20,5"
                                Height="45"
                                Click="FinancialReportsButton_Click"/>

                        <Button Content="📅 ГРАФИКИ" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="20,5"
                                Height="45"
                                Click="CreateScheduleButton_Click"/>

                        <Border Height="1" Background="#FFCCCCCC" Margin="20,20"/>

                        <Button Content="👥 ПЕРСОНАЛ" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="20,5"
                                Height="45"
                                Click="StaffManagementButton_Click"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Выход и информация о пользователе -->
                <Border Grid.Row="2" 
                        Background="White" 
                        Padding="20"
                        BorderBrush="#FFCCCCCC"
                        BorderThickness="0,1,0,0">
                    <StackPanel>
                        <TextBlock x:Name="UserNameText"
                                  FontFamily="Segoe UI"
                                  FontSize="14"
                                  FontWeight="Bold"
                                  Foreground="#FF333333"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,5"/>

                        <TextBlock Text="АДМИНИСТРАТОР"
                                  FontFamily="Segoe UI"
                                  FontSize="12"
                                  Foreground="#FF666666"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,15"/>

                        <Button Content="🚪 ВЫХОД" 
                                Style="{StaticResource DangerButton}"
                                Height="45"
                                Margin="20,0,20,0"
                                Click="LogoutButton_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Основная рабочая область -->
        <Grid Grid.Column="1" Background="#FFFFFFFF">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель -->
            <Border Grid.Row="0" 
                    Background="White"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="0,0,0,1"
                    Padding="30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="CurrentPageTitle"
                              Text="ДАШБОРД"
                              FontFamily="Segoe UI"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#FF333333"
                              VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal"
                               VerticalAlignment="Center">
                        <Button Content="🔔"
                                Style="{StaticResource SecondaryButton}"
                                Width="50"
                                Height="50"
                                FontSize="18"
                                Margin="0,0,10,0"/>

                        <Button Content="⚙️"
                                Style="{StaticResource SecondaryButton}"
                                Width="50"
                                Height="50"
                                FontSize="18"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Контент -->
            <Border Grid.Row="1" 
                    Background="#FFFFFFFF"
                    Padding="30">
                <Frame x:Name="MainFrame"
                       NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>
    </Grid>
</Window>