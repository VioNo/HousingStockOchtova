<Window x:Class="HousingStockVio.EditApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заявка на ремонт" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFFFFFFF">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#FF67BA80"
                Padding="25,20"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock x:Name="HeaderText" 
                          Text="🔧 ФОРМА ЗАЯВКИ НА РЕМОНТ" 
                          FontFamily="Segoe UI"
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>

                <TextBlock Text="Создание или редактирование заявки"
                          FontFamily="Segoe UI"
                          FontSize="14"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Поля формы -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Адрес -->
                <Border Grid.Row="0" 
                        Background="#FFF4E8D3"
                        Padding="20,15"
                        Margin="0,0,0,15"
                        CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0">
                            <TextBlock Text="🏠"
                                      FontSize="24"/>
                            <TextBlock Text="Адрес"
                                      FontFamily="Segoe UI"
                                      FontSize="13"
                                      FontWeight="Bold"
                                      Foreground="#FF333333"
                                      Margin="0,5,0,0"/>
                        </StackPanel>

                        <TextBox x:Name="AddressBox" 
                                Grid.Column="1"
                                Height="45"
                                FontFamily="Segoe UI"
                                FontSize="14"
                                Padding="15"
                                VerticalContentAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
                                    <Setter Property="Background" Value="White"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- ФИО заявителя -->
                <Border Grid.Row="1" 
                        Background="#FFF4E8D3"
                        Padding="20,15"
                        Margin="0,0,0,15"
                        CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0">
                            <TextBlock Text="👤"
                                      FontSize="24"/>
                            <TextBlock Text="Заявитель"
                                      FontFamily="Segoe UI"
                                      FontSize="13"
                                      FontWeight="Bold"
                                      Foreground="#FF333333"
                                      Margin="0,5,0,0"/>
                        </StackPanel>

                        <TextBox x:Name="NameBox" 
                                Grid.Column="1"
                                Height="45"
                                FontFamily="Segoe UI"
                                FontSize="14"
                                Padding="15"
                                VerticalContentAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
                                    <Setter Property="Background" Value="White"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Телефон -->
                <Border Grid.Row="2" 
                        Background="#FFF4E8D3"
                        Padding="20,15"
                        Margin="0,0,0,15"
                        CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0">
                            <TextBlock Text="📞"
                                      FontSize="24"/>
                            <TextBlock Text="Телефон"
                                      FontFamily="Segoe UI"
                                      FontSize="13"
                                      FontWeight="Bold"
                                      Foreground="#FF333333"
                                      Margin="0,5,0,0"/>
                        </StackPanel>

                        <TextBox x:Name="PhoneBox" 
                                Grid.Column="1"
                                Height="45"
                                FontFamily="Segoe UI"
                                FontSize="14"
                                Padding="15"
                                VerticalContentAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
                                    <Setter Property="Background" Value="White"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Описание проблемы -->
                <Border Grid.Row="3" 
                        Background="#FFF4E8D3"
                        Padding="20,15"
                        Margin="0,0,0,15"
                        CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" 
                                   Orientation="Horizontal"
                                   Margin="0,0,0,10">
                            <TextBlock Text="📝"
                                      FontSize="24"
                                      Margin="0,0,10,0"/>
                            <TextBlock Text="Описание проблемы"
                                      FontFamily="Segoe UI"
                                      FontSize="13"
                                      FontWeight="Bold"
                                      Foreground="#FF333333"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBox x:Name="DescriptionBox" 
                                Grid.Row="1"
                                Height="100"
                                FontFamily="Segoe UI"
                                FontSize="14"
                                Padding="15"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
                                    <Setter Property="Background" Value="White"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Ответственный -->
                <Border Grid.Row="4" 
                        Background="#FFF4E8D3"
                        Padding="20,15"
                        Margin="0,0,0,15"
                        CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0">
                            <TextBlock Text="👷"
                                      FontSize="24"/>
                            <TextBlock Text="Исполнитель"
                                      FontFamily="Segoe UI"
                                      FontSize="13"
                                      FontWeight="Bold"
                                      Foreground="#FF333333"
                                      Margin="0,5,0,0"/>
                        </StackPanel>

                        <ComboBox x:Name="ResponsibleBox" 
                                 Grid.Column="1"
                                 Height="45"
                                 FontFamily="Segoe UI"
                                 FontSize="14"
                                 Padding="15"
                                 VerticalContentAlignment="Center">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxStyle}">
                                    <Setter Property="Background" Value="White"/>
                                </Style>
                            </ComboBox.Style>
                            <ComboBoxItem Content="Иванов И.И."/>
                            <ComboBoxItem Content="Петров П.П."/>
                            <ComboBoxItem Content="Сидоров С.С."/>
                            <ComboBoxItem Content="Козлов К.К."/>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- Статус и дата в одной строке -->
                <Grid Grid.Row="5" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Статус -->
                    <Border Grid.Column="0" 
                            Background="#FFF4E8D3"
                            Padding="20,15"
                            CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,20,0">
                                <TextBlock Text="📊"
                                          FontSize="24"/>
                                <TextBlock Text="Статус"
                                          FontFamily="Segoe UI"
                                          FontSize="13"
                                          FontWeight="Bold"
                                          Foreground="#FF333333"
                                          Margin="0,5,0,0"/>
                            </StackPanel>

                            <ComboBox x:Name="StatusBox" 
                                     Grid.Column="1"
                                     Height="45"
                                     FontFamily="Segoe UI"
                                     FontSize="14"
                                     Padding="15"
                                     VerticalContentAlignment="Center">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxStyle}">
                                        <Setter Property="Background" Value="White"/>
                                    </Style>
                                </ComboBox.Style>
                                <ComboBoxItem Content="Открыта"/>
                                <ComboBoxItem Content="В работе"/>
                                <ComboBoxItem Content="Завершена"/>
                                <ComboBoxItem Content="Отменена"/>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Дата создания -->
                    <Border Grid.Column="2" 
                            Background="#FFF4E8D3"
                            Padding="20,15"
                            CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,20,0">
                                <TextBlock Text="📅"
                                          FontSize="24"/>
                                <TextBlock Text="Дата"
                                          FontFamily="Segoe UI"
                                          FontSize="13"
                                          FontWeight="Bold"
                                          Foreground="#FF333333"
                                          Margin="0,5,0,0"/>
                            </StackPanel>

                            <DatePicker x:Name="DateBox" 
                                       Grid.Column="1"
                                       Height="45"
                                       FontFamily="Segoe UI"
                                       FontSize="14"
                                       Padding="10"
                                       VerticalContentAlignment="Center"
                                       SelectedDateFormat="Short">
                                <DatePicker.Style>
                                    <Style TargetType="DatePicker">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="FontFamily" Value="Segoe UI"/>
                                        <Setter Property="FontSize" Value="14"/>
                                    </Style>
                                </DatePicker.Style>
                            </DatePicker>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Подсказка -->
                <Border Grid.Row="6" 
                        Background="#F8F9FA"
                        BorderBrush="#FFCCCCCC"
                        BorderThickness="1"
                        Padding="15"
                        CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="💡 Примечание:"
                                  FontFamily="Segoe UI"
                                  FontSize="12"
                                  FontWeight="Bold"
                                  Foreground="#FF666666"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="• Поля, отмеченные звездочкой (*), обязательны для заполнения"
                                  FontFamily="Segoe UI"
                                  FontSize="11"
                                  Foreground="#FF666666"/>
                        <TextBlock Text="• Заполните все обязательные поля перед сохранением"
                                  FontFamily="Segoe UI"
                                  FontSize="11"
                                  Foreground="#FF666666"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" 
                Background="#FFFFFFFF"
                BorderBrush="#FFCCCCCC"
                BorderThickness="0,1,0,0"
                Padding="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Сообщение о состоянии -->
                <TextBlock x:Name="StatusMessage"
                          Grid.Column="0"
                          FontFamily="Segoe UI"
                          FontSize="12"
                          Foreground="#FF666666"
                          VerticalAlignment="Center"
                          Text="Заполните все обязательные поля"/>

                <!-- Кнопки действий -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal">
                    <Button x:Name="CancelButton" 
                            Content="❌ Отмена" 
                            Style="{StaticResource SecondaryButton}"
                            Height="45"
                            MinWidth="120"
                            FontSize="14"
                            Click="CancelButton_Click"/>

                    <Button x:Name="SaveButton" 
                            Content="✅ Сохранить" 
                            Style="{StaticResource PrimaryButton}"
                            Height="45"
                            MinWidth="120"
                            FontSize="14"
                            Margin="15,0,0,0"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>