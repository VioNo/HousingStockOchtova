<Window x:Class="HousingStockVio.ResidentMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель жителя" 
        Height="750" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFFFF">

    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковая панель навигации -->
        <Border Grid.Column="0" 
                Background="#FF67BA80"
                BorderThickness="0,0,1,0"
                BorderBrush="#FFCCCCCC">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок боковой панели -->
                <Border Grid.Row="0" 
                        Background="#4D9B6E"
                        Padding="25,20">
                    <StackPanel>
                        <!-- Логотип -->
                        <Image Source="Resources/logo.png" 
                               Height="60" 
                               Width="60"
                               Margin="0,0,0,15"
                               HorizontalAlignment="Center"/>

                        <TextBlock Text="ПАНЕЛЬ ЖИТЕЛЯ"
                                  FontFamily="Segoe UI"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Навигационные кнопки -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,30,0,0">
                        <Border Height="1" Background="#4D9B6E" Margin="20,0"/>

                        <Button x:Name="CreateButton"
                                Content="➕ СОЗДАТЬ ЗАЯВКУ" 
                                Style="{StaticResource PrimaryButton}"
                                Margin="20,15"
                                Height="50"
                                Background="White"
                                Foreground="#FF67BA80"
                                Click="CreateApplicationButton_Click"
                                ToolTip="Создать новую заявку на ремонт"/>

                        <Button x:Name="MyAppsButton"
                                Content="🔧 МОИ ЗАЯВКИ" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="20,10"
                                Height="45"
                                Foreground="White"
                                Background="Transparent"
                                BorderBrush="White"
                                Click="MyApplicationsButton_Click"
                                ToolTip="Просмотр моих заявок"/>

                        <Button x:Name="PaymentsButton"
                                Content="💰 МОИ ПЛАТЕЖИ" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="20,10"
                                Height="45"
                                Foreground="White"
                                Background="Transparent"
                                BorderBrush="White"
                                Click="MyPaymentsButton_Click"
                                ToolTip="Просмотр платежей и задолженностей"/>

                        <Button x:Name="NotificationsButton"
                                Content="🔔 УВЕДОМЛЕНИЯ" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="20,10"
                                Height="45"
                                Foreground="White"
                                Background="Transparent"
                                BorderBrush="White"
                                Click="NotificationsButton_Click"
                                ToolTip="Просмотр уведомлений"/>

                        <Border Height="1" Background="#4D9B6E" Margin="20,20"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Выход и информация о пользователе -->
                <Border Grid.Row="2" 
                        Background="#4D9B6E"
                        Padding="20"
                        BorderBrush="#4D9B6E"
                        BorderThickness="0,1,0,0">
                    <StackPanel>
                        <TextBlock x:Name="UserNameText"
                                  FontFamily="Segoe UI"
                                  FontSize="14"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,5"/>

                        <TextBlock Text="ЖИТЕЛЬ"
                                  FontFamily="Segoe UI"
                                  FontSize="12"
                                  Foreground="#E0E0E0"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,15"/>

                        <Button Content="🚪 ВЫХОД" 
                                Style="{StaticResource DangerButton}"
                                Height="45"
                                Margin="20,0,20,0"
                                Click="LogoutButton_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Основная рабочая область -->
        <Grid Grid.Column="1" Background="#FFFFFFFF">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель -->
            <Border Grid.Row="0" 
                    Background="White"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="0,0,0,1"
                    Padding="30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="CurrentPageTitle"
                              Text="МОЙ КАБИНЕТ"
                              FontFamily="Segoe UI"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#FF333333"
                              VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal"
                               VerticalAlignment="Center">
                        <!-- Уведомления -->
                        <Border Background="#FFF4E8D3"
                                CornerRadius="20"
                                Padding="15,8"
                                Margin="0,0,15,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔔"
                                          FontSize="16"
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Уведомления"
                                          FontFamily="Segoe UI"
                                          FontSize="13"
                                          FontWeight="SemiBold"
                                          Foreground="#FF333333"/>
                                <Border Background="#FFE74C3C"
                                        CornerRadius="10"
                                        Padding="6,2"
                                        Margin="8,0,0,0">
                                    <TextBlock Text="3"
                                              FontFamily="Segoe UI"
                                              FontSize="11"
                                              FontWeight="Bold"
                                              Foreground="White"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Профиль -->
                        <Button Content="👤 Профиль"
                                Style="{StaticResource SecondaryButton}"
                                Height="45"
                                MinWidth="100"
                                FontSize="13"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Контент -->
            <Border Grid.Row="1" 
                    Background="#FFFFFFFF"
                    Padding="30">
                <Frame x:Name="MainFrame"
                       NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>
    </Grid>
</Window>