<Window x:Class="HousingStockVio.ChangeApplicationStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменение статуса заявки" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#67BA80" CornerRadius="5" Padding="10" Margin="0,0,0,15">
            <TextBlock Text="Изменение статуса заявки" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Функция в разработке" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="Эта функция будет доступна в следующем обновлении" FontSize="14" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" Margin="0,10,0,0" Foreground="#666666"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Закрыть" Width="120" Height="40" FontSize="14" FontWeight="SemiBold" 
                    Background="#E0E0E0" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>