<Window x:Class="HousingStockVio.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация - Управляющая компания" 
        Height="850" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFFFFFFF">

    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Window.Resources>

    <Grid Background="#FFFFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхний блок с логотипом -->
        <Border Grid.Row="0" 
                Background="#FF67BA80"
                Padding="40,30">
            <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center">

                <!-- Логотип и заголовок -->
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20">
                    <Image Source="Resources/logo.png" 
                           Height="60" 
                           Width="60"
                           Margin="0,0,20,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="УПРАВЛЯЮЩАЯ КОМПАНИЯ" 
                                   FontFamily="Segoe UI"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Система управления жилым фондом"
                                   FontFamily="Segoe UI"
                                   FontSize="14"
                                   Foreground="#E0E0E0"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Приветствие -->
                <TextBlock Text="👋 ДОБРО ПОЖАЛОВАТЬ" 
                           FontFamily="Segoe UI"
                           FontSize="18" 
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontWeight="SemiBold"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Форма авторизации -->
        <Border Grid.Row="1" 
                Background="#FFFFFFFF"
                Padding="40,40,40,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок формы -->
                <TextBlock Grid.Row="0"
                          Text="🔐 АВТОРИЗАЦИЯ В СИСТЕМЕ" 
                          FontFamily="Segoe UI"
                          FontSize="20"
                          FontWeight="Bold"
                          Foreground="#FF333333"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <!-- Карточка логина -->
                <Border Grid.Row="1" 
                        Background="#FFF4E8D3"
                        Padding="25,20"
                        Margin="0,0,0,20"
                        CornerRadius="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0">
                            <TextBlock Text="👤"
                                      FontSize="28"/>
                            <TextBlock Text="Логин"
                                      FontFamily="Segoe UI"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="#FF333333"
                                      Margin="0,8,0,0"/>
                        </StackPanel>

                        <TextBox x:Name="LoginTextBox" 
                                Grid.Column="1"
                                Height="50"
                                FontFamily="Segoe UI"
                                FontSize="15"
                                Padding="15"
                                VerticalContentAlignment="Center"
                                KeyDown="LoginTextBox_KeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Карточка пароля -->
                <Border Grid.Row="2" 
                        Background="#FFF4E8D3"
                        Padding="25,20"
                        Margin="0,0,0,20"
                        CornerRadius="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0">
                            <TextBlock Text="🔒"
                                      FontSize="28"/>
                            <TextBlock Text="Пароль"
                                      FontFamily="Segoe UI"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="#FF333333"
                                      Margin="0,8,0,0"/>
                        </StackPanel>

                        <PasswordBox x:Name="PasswordBox" 
                                    Grid.Column="1"
                                    Height="50"
                                    FontFamily="Segoe UI"
                                    FontSize="15"
                                    Padding="15"
                                    VerticalContentAlignment="Center"
                                    KeyDown="PasswordBox_KeyDown">
                            <PasswordBox.Style>
                                <Style TargetType="PasswordBox">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="FontFamily" Value="Segoe UI"/>
                                    <Setter Property="FontSize" Value="15"/>
                                </Style>
                            </PasswordBox.Style>
                        </PasswordBox>
                    </Grid>
                </Border>

                <!-- Сообщение об ошибке -->
                <Border Grid.Row="3" 
                        x:Name="ErrorBorder"
                        Background="#FFE74C3C"
                        Padding="20,15"
                        Margin="0,0,0,15"
                        CornerRadius="8"
                        Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚠️"
                                  FontSize="20"
                                  VerticalAlignment="Center"
                                  Margin="0,0,15,0"/>
                        <TextBlock x:Name="ErrorText" 
                                  Text="" 
                                  Foreground="White"
                                  TextWrapping="Wrap"
                                  FontFamily="Segoe UI"
                                  FontSize="13"
                                  VerticalAlignment="Center"
                                  FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <!-- Подсказка -->
                <Border Grid.Row="4" 
                        Background="#F8F9FA"
                        BorderBrush="#FFCCCCCC"
                        BorderThickness="1"
                        Padding="20,15"
                        Margin="0,0,0,20"
                        CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="💡 Подсказка:"
                                  FontFamily="Segoe UI"
                                  FontSize="12"
                                  FontWeight="Bold"
                                  Foreground="#FF666666"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="• Используйте логин и пароль, выданные администратором"
                                  FontFamily="Segoe UI"
                                  FontSize="11"
                                  Foreground="#FF666666"/>
                        <TextBlock Text="• Для входа нажмите Enter или кнопку 'Войти'"
                                  FontFamily="Segoe UI"
                                  FontSize="11"
                                  Foreground="#FF666666"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Кнопка входа -->
                <Border Grid.Row="5" 
                        VerticalAlignment="Bottom">
                    <Button x:Name="LoginButton" 
                            Content="🚀 ВОЙТИ В СИСТЕМУ" 
                            Style="{StaticResource PrimaryButton}"
                            Click="LoginButton_Click"
                            Height="55"
                            FontSize="16"
                            FontWeight="Bold"
                            HorizontalAlignment="Stretch"/>
                </Border>

                <!-- Информация о системе -->
                <TextBlock Grid.Row="5"
                          VerticalAlignment="Bottom"
                          HorizontalAlignment="Center"
                          FontFamily="Segoe UI"
                          FontSize="11"
                          Foreground="#999999"
                          Margin="0,0,0,-30">
                    <Run Text="Версия системы: "/>
                    <Run Text="1.0.0"/>
                    <Run Text=" | "/>
                    <Run Text="© "/>
                    <Run Text="2024 Управляющая компания"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>