<Window x:Class="HousingStockVio.CreateAccrualWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание начисления" 
        Height="750" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFFFFFFF">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#FF67BA80"
                Padding="25,20"
                Margin="0,0,0,25">
            <StackPanel>
                <TextBlock Text="💰 СОЗДАНИЕ НАЧИСЛЕНИЯ" 
                          FontFamily="Segoe UI"
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>

                <TextBlock Text="Начисление за коммунальные услуги"
                          FontFamily="Segoe UI"
                          FontSize="14"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Поля формы -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Владелец -->
            <Border Grid.Row="0" 
                    Background="#FFF4E8D3"
                    Padding="20,15"
                    Margin="0,0,0,15"
                    CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" 
                               VerticalAlignment="Center"
                               Margin="0,0,20,0">
                        <TextBlock Text="👤"
                                  FontSize="24"/>
                        <TextBlock Text="Владелец"
                                  FontFamily="Segoe UI"
                                  FontSize="13"
                                  FontWeight="Bold"
                                  Foreground="#FF333333"
                                  Margin="0,5,0,0"/>
                    </StackPanel>

                    <ComboBox x:Name="OwnerComboBox" 
                             Grid.Column="1"
                             Height="45"
                             FontFamily="Segoe UI"
                             FontSize="14"
                             Padding="15"
                             DisplayMemberPath="Name">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxStyle}">
                                <Setter Property="Background" Value="White"/>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </Grid>
            </Border>

            <!-- Период и сумма в одной строке -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Период -->
                <Border Grid.Column="0" 
                        Background="#FFF4E8D3"
                        Padding="20,15"
                        CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0">
                            <TextBlock Text="📅"
                                      FontSize="24"/>
                            <TextBlock Text="Период"
                                      FontFamily="Segoe UI"
                                      FontSize="13"
                                      FontWeight="Bold"
                                      Foreground="#FF333333"
                                      Margin="0,5,0,0"/>
                        </StackPanel>

                        <TextBox x:Name="PeriodTextBox" 
                                Grid.Column="1"
                                Height="45"
                                FontFamily="Segoe UI"
                                FontSize="14"
                                Padding="15"
                                VerticalContentAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
                                    <Setter Property="Background" Value="White"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Сумма -->
                <Border Grid.Column="2" 
                        Background="#FFF4E8D3"
                        Padding="20,15"
                        CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0">
                            <TextBlock Text="💰"
                                      FontSize="24"/>
                            <TextBlock Text="Сумма"
                                      FontFamily="Segoe UI"
                                      FontSize="13"
                                      FontWeight="Bold"
                                      Foreground="#FF333333"
                                      Margin="0,5,0,0"/>
                        </StackPanel>

                        <TextBox x:Name="AmountTextBox" 
                                Grid.Column="1"
                                Height="45"
                                FontFamily="Segoe UI"
                                FontSize="14"
                                Padding="15"
                                VerticalContentAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
                                    <Setter Property="Background" Value="White"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>
            </Grid>

            <!-- Услуга -->
            <Border Grid.Row="2" 
                    Background="#FFF4E8D3"
                    Padding="20,15"
                    Margin="0,0,0,15"
                    CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" 
                               VerticalAlignment="Center"
                               Margin="0,0,20,0">
                        <TextBlock Text="🔧"
                                  FontSize="24"/>
                        <TextBlock Text="Услуга"
                                  FontFamily="Segoe UI"
                                  FontSize="13"
                                  FontWeight="Bold"
                                  Foreground="#FF333333"
                                  Margin="0,5,0,0"/>
                    </StackPanel>

                    <ComboBox x:Name="ServiceComboBox" 
                             Grid.Column="1"
                             Height="45"
                             FontFamily="Segoe UI"
                             FontSize="14"
                             Padding="15"
                             SelectedIndex="0">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxStyle}">
                                <Setter Property="Background" Value="White"/>
                            </Style>
                        </ComboBox.Style>
                        <ComboBoxItem Content="Водоснабжение"/>
                        <ComboBoxItem Content="Электроснабжение"/>
                        <ComboBoxItem Content="Отопление"/>
                        <ComboBoxItem Content="Содержание дома"/>
                    </ComboBox>
                </Grid>
            </Border>

            <!-- Комментарий -->
            <Border Grid.Row="3" 
                    Background="#FFF4E8D3"
                    Padding="20,15"
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" 
                               Orientation="Horizontal"
                               Margin="0,0,0,10">
                        <TextBlock Text="📝"
                                  FontSize="24"
                                  Margin="0,0,10,0"/>
                        <TextBlock Text="Комментарий"
                                  FontFamily="Segoe UI"
                                  FontSize="13"
                                  FontWeight="Bold"
                                  Foreground="#FF333333"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBox x:Name="CommentTextBox" 
                            Grid.Row="1"
                            FontFamily="Segoe UI"
                            FontSize="14"
                            Padding="15"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"
                            MinHeight="80">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
                                <Setter Property="Background" Value="White"/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
            </Border>

            <!-- Подсказки -->
            <Border Grid.Row="4" 
                    Background="#F8F9FA"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1"
                    Padding="15"
                    Margin="0,15,0,0"
                    CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="💡 Подсказки:"
                              FontFamily="Segoe UI"
                              FontSize="12"
                              FontWeight="Bold"
                              Foreground="#FF666666"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="• Период: введите в формате ММ.ГГГГ (например: 11.2024)"
                              FontFamily="Segoe UI"
                              FontSize="11"
                              Foreground="#FF666666"/>
                    <TextBlock Text="• Сумма: введите числовое значение в рублях"
                              FontFamily="Segoe UI"
                              FontSize="11"
                              Foreground="#FF666666"
                              Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Кнопки -->
        <Border Grid.Row="2" 
                Background="#FFFFFFFF"
                BorderBrush="#FFCCCCCC"
                BorderThickness="0,1,0,0"
                Padding="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Статус сообщение -->
                <TextBlock x:Name="StatusMessage"
                          Grid.Column="0"
                          FontFamily="Segoe UI"
                          FontSize="12"
                          Foreground="#FF666666"
                          VerticalAlignment="Center"
                          Text="Все поля обязательны для заполнения"/>

                <!-- Кнопки действий -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal">
                    <Button x:Name="CancelButton" 
                            Content="❌ Отмена" 
                            Style="{StaticResource SecondaryButton}"
                            Height="45"
                            MinWidth="120"
                            FontSize="14"
                            Click="CancelButton_Click"/>

                    <Button x:Name="SaveButton" 
                            Content="✅ Создать начисление" 
                            Style="{StaticResource PrimaryButton}"
                            Height="45"
                            MinWidth="200"
                            FontSize="14"
                            Margin="15,0,0,0"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>