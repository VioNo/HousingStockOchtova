<Page x:Class="HousingStockVio.ManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Панель руководителя"
      Background="{StaticResource PrimaryBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{StaticResource AccentBrush}" 
                Padding="20">
            <TextBlock Text="Панель руководителя" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Контент -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая колонка - Управление -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <Border Background="#F8F9FA" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Управление" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,15"/>

                        <Button x:Name="RepairApplicationsButton"
                                Content="Заявки на ремонт" 
                                Style="{StaticResource PrimaryButton}"
                                Height="45"
                                Margin="0,0,0,10"
                                Click="RepairApplicationsButton_Click"
                                ToolTip="Управление заявками на ремонт"/>

                        <Button x:Name="FinancialReportsButton"
                                Content="Финансовая отчетность" 
                                Style="{StaticResource PrimaryButton}"
                                Height="45"
                                Margin="0,0,0,10"
                                Click="FinancialReportsButton_Click"
                                ToolTip="Просмотр финансовых отчетов"/>

                        <Button x:Name="StaffManagementButton"
                                Content="Персонал" 
                                Style="{StaticResource PrimaryButton}"
                                Height="45"
                                Margin="0,0,0,10"
                                Click="StaffManagementButton_Click"
                                ToolTip="Управление персоналом"/>

                        <Button x:Name="WorkScheduleButton"
                                Content="График работ" 
                                Style="{StaticResource PrimaryButton}"
                                Height="45"
                                Click="WorkScheduleButton_Click"
                                ToolTip="Управление графиком работ"/>
                    </StackPanel>
                </Border>

                <Border Background="#F8F9FA" 
                        CornerRadius="8" 
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Быстрые отчеты" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,15"/>

                        <Button x:Name="ApplicationsReportButton"
                                Content="Отчет по заявкам" 
                                Style="{StaticResource PrimaryButton}"
                                Height="40"
                                Margin="0,0,0,10"
                                Click="ApplicationsReportButton_Click"
                                ToolTip="Сформировать отчет по заявкам"/>

                        <Button x:Name="FinanceReportButton"
                                Content="Финансовый отчет" 
                                Style="{StaticResource PrimaryButton}"
                                Height="40"
                                Margin="0,0,0,10"
                                Click="FinanceReportButton_Click"
                                ToolTip="Сформировать финансовый отчет"/>

                        <Button x:Name="StaffReportButton"
                                Content="Отчет по персоналу" 
                                Style="{StaticResource PrimaryButton}"
                                Height="40"
                                Click="StaffReportButton_Click"
                                ToolTip="Сформировать отчет по персоналу"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Центральная колонка - Мониторинг -->
            <StackPanel Grid.Column="1" Margin="10,0,10,0">
                <Border Background="#F8F9FA" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Мониторинг" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Всего домов:" Width="150"/>
                            <TextBlock x:Name="TotalHousesText" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Активные заявки:" Width="150"/>
                            <TextBlock x:Name="ActiveAppsText" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Выполнено сегодня:" Width="150"/>
                            <TextBlock x:Name="CompletedTodayText" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Персонал онлайн:" Width="150"/>
                            <TextBlock x:Name="StaffOnlineText" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="#F8F9FA" 
                        CornerRadius="8" 
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Срочные задачи" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,15"/>

                        <ListView x:Name="UrgentTasksList" 
                                 Height="200"
                                 BorderThickness="1"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 SelectionMode="Single"
                                 MouseDoubleClick="UrgentTasksList_MouseDoubleClick">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Задача" Width="200" DisplayMemberBinding="{Binding Task}"/>
                                    <GridViewColumn Header="Приоритет" Width="80" DisplayMemberBinding="{Binding Priority}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Правая колонка - Аналитика -->
            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                <Border Background="#F8F9FA" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Финансовая аналитика" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Месячный доход:" Width="150"/>
                            <TextBlock x:Name="MonthlyIncomeText" 
                                      FontWeight="SemiBold"
                                      Foreground="#27AE60"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Месячные расходы:" Width="150"/>
                            <TextBlock x:Name="MonthlyExpensesText" 
                                      FontWeight="SemiBold"
                                      Foreground="#E74C3C"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Чистая прибыль:" Width="150"/>
                            <TextBlock x:Name="NetProfitText" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Рентабельность:" Width="150"/>
                            <TextBlock x:Name="ProfitabilityText" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="#F8F9FA" 
                        CornerRadius="8" 
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Эффективность" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Выполнение плана:" Width="150"/>
                            <TextBlock x:Name="PlanCompletionText" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Удовлетворенность:" Width="150"/>
                            <TextBlock x:Name="SatisfactionText" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Среднее время:" Width="150"/>
                            <TextBlock x:Name="AvgResponseTime" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Качество работ:" Width="150"/>
                            <TextBlock x:Name="WorkQualityText" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>