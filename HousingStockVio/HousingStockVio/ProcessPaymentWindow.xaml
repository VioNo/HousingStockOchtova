<Window x:Class="HousingStockVio.ProcessPaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Обработка платежа" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#67BA80" 
                CornerRadius="5" 
                Padding="10" 
                Margin="0,0,0,15">
            <TextBlock Text="Обработка платежа" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Список задолженностей -->
            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                <TextBlock Text="Текущие задолженности" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Margin="0,0,0,10"/>

                <Border BorderBrush="#CCCCCC" 
                        BorderThickness="1" 
                        CornerRadius="4">
                    <ListView x:Name="DebtsList" 
                             Height="400"
                             SelectionMode="Single"
                             SelectionChanged="DebtsList_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" Width="60" DisplayMemberBinding="{Binding DebtID}"/>
                                <GridViewColumn Header="Владелец" Width="150" DisplayMemberBinding="{Binding OwnerName}"/>
                                <GridViewColumn Header="Адрес" Width="180" DisplayMemberBinding="{Binding Address}"/>
                                <GridViewColumn Header="Вода" Width="80" 
                                               DisplayMemberBinding="{Binding WaterDebt, StringFormat=N2}"/>
                                <GridViewColumn Header="Электричество" Width="100" 
                                               DisplayMemberBinding="{Binding ElectricityDebt, StringFormat=N2}"/>
                                <GridViewColumn Header="Итого" Width="100" 
                                               DisplayMemberBinding="{Binding TotalDebt, StringFormat=N2}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>
            </StackPanel>

            <!-- Форма оплаты -->
            <Border Grid.Column="1" 
                    Background="#F4E8D3" 
                    CornerRadius="8" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Оплата задолженности" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Margin="0,0,0,15"/>

                    <!-- Выбранный должник -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Выбранный должник:" 
                                  FontSize="13" 
                                  FontWeight="Medium"/>
                        <TextBlock x:Name="SelectedDebtor" 
                                  FontSize="13" 
                                  FontWeight="Bold"
                                  TextWrapping="Wrap"
                                  Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Сумма задолженности -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Общая задолженность:" 
                                  FontSize="13" 
                                  FontWeight="Medium"/>
                        <TextBlock x:Name="TotalDebt" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="#E74C3C"
                                  Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Сумма оплаты -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Сумма оплаты *" 
                                  FontSize="13" 
                                  FontWeight="Medium"/>
                        <TextBox x:Name="AmountTextBox" 
                                Height="35"
                                Margin="0,5,0,0"
                                FontSize="14"
                                Padding="5"
                                BorderThickness="1"
                                BorderBrush="#CCCCCC"/>
                    </StackPanel>

                    <!-- Способ оплаты -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Способ оплаты *" 
                                  FontSize="13" 
                                  FontWeight="Medium"/>
                        <ComboBox x:Name="MethodComboBox" 
                                 Height="35"
                                 Margin="0,5,0,0"
                                 FontSize="14"
                                 Padding="5"
                                 BorderThickness="1"
                                 BorderBrush="#CCCCCC"
                                 SelectedIndex="0">
                            <ComboBoxItem Content="Наличные"/>
                            <ComboBoxItem Content="Банковская карта"/>
                            <ComboBoxItem Content="Банковский перевод"/>
                            <ComboBoxItem Content="Электронный кошелек"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Дата оплаты -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Дата оплаты *" 
                                  FontSize="13" 
                                  FontWeight="Medium"/>
                        <DatePicker x:Name="DatePicker" 
                                   Height="35"
                                   Margin="0,5,0,0"
                                   SelectedDateFormat="Short"/>
                    </StackPanel>

                    <!-- Кнопка оплаты -->
                    <Button x:Name="ProcessButton" 
                            Content="💳 Обработать платеж" 
                            Background="#67BA80"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Height="45"
                            Padding="10"
                            Click="ProcessButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="🔄 Обновить" 
                    Background="Transparent"
                    Foreground="#67BA80"
                    BorderBrush="#67BA80"
                    BorderThickness="1"
                    Width="120" 
                    Height="40"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Margin="0,0,10,0"
                    Click="RefreshButton_Click"/>

            <Button Content="✖ Закрыть" 
                    Background="#E74C3C"
                    Foreground="White"
                    BorderThickness="0"
                    Width="120" 
                    Height="40"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>